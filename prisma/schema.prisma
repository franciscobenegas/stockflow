generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

enum Rol {
  USER
  ADMIN
}

model User{
  id String    @id @default(uuid())
  email String @unique
  username String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  rol Rol @default(ADMIN)
}

model Cliente{
  id String @id @default(uuid())
  nombre String 
  ruc String 
  telefono String
  email String
  direccion String
  tipo String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId String

  @@index([nombre,ruc])
}